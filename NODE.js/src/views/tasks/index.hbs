<div class="max-w-7x1 mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overfloe-hidden shadow-x1 sm:rounded-lg mt-12">

        <table class="table-fixed w-full">
            <thead>
                <tr class="bg-green-500 text white">
                   <th class="w-15 py-4 ...">CI</th>
                   <th class="w-15 py-4 ...">Nombre</th>
                   <th class="w-15 py-4 ...">Apellido</th>
                   <th class="w-15 py-4 ...">Ocupación</th>
                   <th class="w-15 py-4 ...">Dirección</th>
                   <th class="w-15 py-4 ...">Teléfono</th>                
                   <th class="w-15 py-4 ...">Acciones</th>

                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
                <tr>
                    <td class="py-3 px-6">{{ci}}</td>
                    <td class="py-3 px-6">{{nombre}}</td>
                    <td class="py-3 px-6">{{apellido}}</td>
                    <td class="py-3 px-6">{{ocupacion}}</td>
                    <td class="py-3 px-6">{{direccion}}</td>
                    <td class="py-3 px-6">{{telefono}}</td>
                    
                    <td class="flex">
                        <form action="/tasks/delete" method="POST" class="mx-2">
                            <input type="hidden" value="{{ci}}" name="ci">
                            <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                                <i class="fas fa-trash"></i></button>
                        </form>
                       
                        <a href="/tasks/edit/{{ci}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
                            <i class="fas fa-pen"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</div>